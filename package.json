{
  "version": "0.7.2",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/chrome": "^0.0.308",
    "@types/wicg-file-system-access": "^2020.9.8",
    "archiver": "^5.3.2",
    "commander": "^12.1.0",
    "icon-gen": "^5.0.0",
    "lefthook": "^1.11.3",
    "prettier": "^3.5.3"
  },
  "scripts": {
    "clean": "git clean -fdX dist/",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "node scripts/build.js",
    "build:firefox": "node scripts/build.js --firefox",
    "check": "biome check && npm run check-version",
    "fix": "biome check --fix && npm run sync-version",
    "fix:unsafe": "biome check --fix --unsafe && npm run sync-version",
    "check-version": "node scripts/check-version.js",
    "sync-version": "node scripts/check-version.js --fix"
  }
}
